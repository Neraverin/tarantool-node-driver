{
	"compilerOptions": {
		"allowJs": false,
    	"checkJs": false,
    	"strict": true,
    	"alwaysStrict": true,
		"target": "ES2019",
		"module": "commonJS",
    	"moduleResolution": "node",
		"skipLibCheck": true,
    	"lib": ["es2020"],
		"outDir": "lib",
		// We want the sourcemaps in a separate file
		"inlineSourceMap": false,
		"sourceMap": true,
		// API-Extractor uses declaration maps to report problems in source, no need to distribute
		"declaration": true,
		"declarationMap": true,
		// we include sources in the release
		"inlineSources": false,
		// Prevents web types from being suggested by vscode.
		"types": ["mocha", "node"],
		"forceConsistentCasingInFileNames": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
	},
	"include": ["src/**/*"]
}
